<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5"> 
    <error-page>
        <error-code>500</error-code>
        <location>/WebTemplate.jsp?BODY_PATH=CommonError.jsp</location>
    </error-page>
    <servlet>
        <servlet-name>bbs-list-servlet</servlet-name>
        <servlet-class>web.BBSListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bbs-list-servlet</servlet-name>
        <url-pattern>/bbs-list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login-servlet</servlet-name>
        <servlet-class>web.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login-servlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout-servlet</servlet-name>
        <servlet-class>web.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout-servlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>new-login-servlet</servlet-name>
        <servlet-class>web.NewLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>new-login-servlet</servlet-name>
        <url-pattern>/new-login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>new-logout-servlet</servlet-name>
        <servlet-class>web.NewLogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>new-logout-servlet</servlet-name>
        <url-pattern>/new-logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>books-info-servlet</servlet-name>
        <servlet-class>web.BooksInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>books-info-servlet</servlet-name>
        <url-pattern>/books-info</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>add-item-to-cart-servlet</servlet-name>
        <servlet-class>web.AddItemToCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add-item-to-cart-servlet</servlet-name>
        <url-pattern>/add-item-to-cart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>cart-list-servlet</servlet-name>
        <servlet-class>web.CartListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cart-list-servlet</servlet-name>
        <url-pattern>/cart-list</url-pattern>
    </servlet-mapping>
</web-app> 